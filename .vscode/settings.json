{
    "python.pythonPath": "C:\\Program Files (x86)\\Python\\python.exe",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "_minted-thesis": true,
        "thesis.aux": true,
        "thesis.bcf": true,
        "thesis.out": true,
        "thesis.toc": true,
        "thesis.run.xml": true,
        "thesis.log": true,
        "thesis.pdf": true,
        "thesis.synctex.gz": true,
    },
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.latex.toolchain": [
      {
        "command": "texify",
        "args": [
          "--synctex",
          "--pdf",
          "--tex-option=\"-interaction=nonstopmode\"",
          "--tex-option=\"-file-line-error\"",
          "--tex-option=\"-shell-escape\"",
          "--clean",
          "thesis.tex"    
        ]
      }
    ],
}